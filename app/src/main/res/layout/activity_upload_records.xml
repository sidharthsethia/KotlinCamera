<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    tools:context="com.medcords.mhcpanel.activities.UploadRecordsActivity"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/activity_upload_records"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_small"
        android:background="@color/finestGray"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_doctor"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        app:errorTextAppearance="@style/error_appearance"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:textColorHint="@color/colorTextSecondary"
            android:inputType="text"
            android:hint="Doctor" />
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/input_doc_type"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:text="Prescription"
            android:id="@+id/input_prescription"
            android:paddingLeft="@dimen/margin_extra_small"
            android:textSize="@dimen/text_size_small"
            android:checked="true"
            android:textColor="@color/colorTextSecondary"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Report"
            android:id="@+id/input_report"
            android:paddingLeft="@dimen/margin_extra_small"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorTextSecondary"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="Bill"
            android:id="@+id/input_bill"
            android:paddingLeft="@dimen/margin_extra_small"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorTextSecondary"
            android:layout_height="wrap_content" />


    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_type_of_record"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        app:errorTextAppearance="@style/error_appearance"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_type_of_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:textColorHint="@color/colorTextSecondary"
            android:inputType="text"
            android:hint="Report Type" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_date"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_small"
        app:errorTextAppearance="@style/error_appearance"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:textColorHint="@color/colorTextSecondary"
            android:inputType="date"
            android:hint="Date" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/no_tags_added"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:layout_height="wrap_content"
            android:text="No Tags added. Select from below."/>

        <eu.fiskur.chipcloud.ChipCloud
            android:id="@+id/chip_cloud"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <Button
        android:id="@+id/upload_button"
        android:layout_below="@+id/input_layout_mobile"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_phone_layout_login"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="@dimen/margin_phone_layout_login"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Upload"
        android:textColor="@android:color/white" />




</LinearLayout>

</ScrollView>
