<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/activity_upload_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:text="Patient :"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_small"
                android:id="@+id/patient_name"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:text="Sidharth Sethia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:text="Medcords Id :"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:id="@+id/patient_id"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:text="123242151"/>

        </LinearLayout>



        <View
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_small"
            android:background="@color/finestGray"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_doctor"
            android:layout_width="match_parent"
            app:errorTextAppearance="@style/error_appearance"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/input_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:singleLine="true"
                android:textSize="@dimen/text_size_medium"
                android:textColorHint="@color/colorTextSecondary"
                android:inputType="text"
                android:hint="With Doctor" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_small"
            android:background="@color/finestGray"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="bold"
            android:padding="@dimen/margin_small"
            android:text="FILTERS"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/margin_extra_small"
                android:layout_height="@dimen/margin_extra_small"
                android:background="@color/colorTextSecondary"
                android:layout_gravity="center" />

            <TextView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/text_size_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Range"/>

        </LinearLayout>

        <com.medcords.mhcpanel.views.RadioGroupGridView

            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_small"
            android:id="@+id/date_radio_group"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rad1"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 week" />

                <RadioButton
                    android:id="@+id/rad2"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 month" />
            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rad3"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 months" />

                <RadioButton
                    android:id="@+id/rad4"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 months" />
            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rad5"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 year" />

                <RadioButton
                    android:id="@+id/rad6"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Till Date" />
            </TableRow>

        </com.medcords.mhcpanel.views.RadioGroupGridView>

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="@dimen/margin_extra_small"
                    android:layout_height="@dimen/margin_extra_small"
                    android:background="@color/colorTextSecondary"
                    android:layout_gravity="center" />

                <TextView
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Document Type"/>

            </LinearLayout>

            <TableRow android:layout_width="match_parent"
                android:paddingTop="@dimen/margin_small"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/report_type"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report" />

                <CheckBox
                    android:id="@+id/bill_type"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill" />
            </TableRow>

            <CheckBox
                android:id="@+id/prescription_type"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorTextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prescription" />




        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:id="@+id/report_type_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/margin_extra_small"
                android:layout_height="@dimen/margin_extra_small"
                android:background="@color/colorTextSecondary"
                android:layout_gravity="center" />

            <TextView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Type"/>

        </LinearLayout>

        <eu.fiskur.chipcloud.ChipCloud
            android:id="@+id/report_type_chip_cloud"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:id="@+id/body_tags_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/margin_extra_small"
                android:layout_height="@dimen/margin_extra_small"
                android:background="@color/colorTextSecondary"
                android:layout_gravity="center" />

            <TextView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body Tags"/>

        </LinearLayout>

        <eu.fiskur.chipcloud.ChipCloud
            android:id="@+id/body_tags_chip_cloud"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


        <Button
            android:id="@+id/share_button"
            android:layout_marginTop="@dimen/margin_small"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_phone_layout_login"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/margin_phone_layout_login"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="sans-serif"
            android:text="Share"
            android:textColor="@android:color/white" />




    </LinearLayout>

</ScrollView>
